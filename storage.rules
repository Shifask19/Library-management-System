
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default rule: Allow read by anyone, allow write only if authenticated.
    // For actual file uploads (e.g., book covers, user profiles), you would create
    // more specific rules for paths like:
    // match /users/{userId}/{fileName} {
    //   allow read;
    //   allow write: if request.auth.uid == userId;
    // }
    // match /bookCovers/{bookId}/{fileName} {
    //  allow read;
    //  allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; // Only admins
    // }
    match /{allPaths=**} {
      allow read; // Public read access for now. Change to `if request.auth != null;` for authenticated read.
      allow write: if request.auth != null;
    }
  }
}
